{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    // {
    //   "name": "Start Bash Tool Server",
    //   "command": "cd /project/workspace && python bash_server.py &",
    //   "preview": {
    //     "port": 8000
    //   }
    // }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "bash": {
      "name": "start bash tool server",
      "command": "cd /project/workspace && uvicorn bash_server:app --workers 4",
      "runAtStart": true,
      "preview": {
        "port": 8000
      },
      "restartOn": {
        "clone": false,
        "resume": false
      }
    },
    "code-server": {
      "name": "start code-server",
      "command": "code-server --bind-addr 0.0.0.0:8080 --auth none /project/workspace",
      "runAtStart": true,
      "preview": {
        "port": 8080
      },
      "restartOn": {
        "clone": false,
        "resume": false
      }
    },
    "init-git": {
      "name": "initialize .gitscout git repo",
      "command": "cd /project/workspace && git init --bare .gitscout && git --git-dir=/project/workspace/.gitscout --work-tree=. config user.email 'scout@scout.new' && git --git-dir=/project/workspace/.gitscout --work-tree=. config user.name 'Scout'",
      "runAtStart": true,
      "restartOn": {
        "clone": false,
        "resume": false
      }
    }
  }
}